ff () 
{ 
    fbdy $(functions $*)
}
fsfg () 
{ 
    fbdy $(sfg $*)
}
topsuf () 
{ 
    ls *.* | grep -v '[~#]$' | sed 's/.*\.//' | sort | uniq -c | sort -rn | awk 'NR == 1 { print $2}'
}
pdl () 
{ 
    peekd;
    ls -t | grep -v '[~#]$' | sed 10q
}
cmd_init () 
{ 
    source programlib 2> /dev/null;
    comment ff, fsfg topsuf pdl
}
hotlib () 
{ 
    gh 'lib$' | field 'NF' | sort | uniq -c | sort -n
}
cmd_init
